@model CRUD_El_Colombiano.Models.ViewModels.ProyectoVM
@{
    ViewData["Title"] = "ProyectoInteDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oProyecto.Codigo == 0)
{
    <h1>Crear Nuevo Proyecto</h1>
}
else
{
    <h1>Editar Proyecto</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="ProyectoInteDetalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProyecto.Codigo" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProyecto.Nombre">Nombre Completo</label>
                <input class="form-control form-control-sm" asp-for="oProyecto.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProyecto.Direccion">Direccion</label>
                <input class="form-control form-control-sm" asp-for="oProyecto.Direccion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProyecto.Constructora">Nombre de la Constructora</label>
                <input class="form-control form-control-sm" asp-for="oProyecto.Constructora" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProyecto.Contacto">Contacto</label>
                <input class="form-control form-control-sm" asp-for="oProyecto.Contacto" type="text" />
            </div>


            <div class="mb-2">

                @if (Model.oProyecto.Codigo == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Ver_Proyectos" asp-controller="Home">Volver</a>
            </div>

        </form>

    </div>
</div>


