@model List<CRUD_El_Colombiano.Models.Proyecto>
@{
    ViewData["Title"] = "Ver_Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h5>Listado de Proyectos Disponibles</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="ProyectoInteDetalle" asp-controller="Home" asp-route-idPersonaInt="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Constructora</th>
                    <th>Contacto</th>   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Nombre</td>
                        <td>@item.Direccion</td>
                        <td>@item.Constructora</td>
                        <td>@item.Contacto</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="ProyectoInteDetalle" asp-controller="Home" asp-route-idPersonaInt="@item.Codigo"> Editar </a>
                            <a class="btn btn-danger btn-sm" asp-action="EliminarProyecto" asp-controller="Home" asp-route-idPersonaInt="@item.Codigo"> Eliminar </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mb-2">

            <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
        </div>

    </div>
</div>
