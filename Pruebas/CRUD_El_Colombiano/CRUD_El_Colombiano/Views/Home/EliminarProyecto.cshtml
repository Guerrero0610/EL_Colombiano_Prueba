@model CRUD_El_Colombiano.Models.Proyecto
@{
    ViewData["Title"] = "EliminarProyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Esta seguro de eliminar este Proyecto?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="EliminarProyecto" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Codigo" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre Completo</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Direccion">Direccion</label>
                <input class="form-control form-control-sm" asp-for="Direccion" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Constructora">Nombre de la Constructora</label>
                <input class="form-control form-control-sm" asp-for="Constructora" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Contacto">Contacto</label>
                <input class="form-control form-control-sm" asp-for="Contacto" type="text" disabled />
            </div>

            <div class="mb-2">

                <button class="btn btn-darger btn-sm w-25" type="submit">Eliminar</button>

                <a class="btn btn-dark btn-sm" asp-action="Ver_Proyectos" asp-controller="Home">Volver</a>
            </div>

        </form>

    </div>
</div>


